<Window x:Class="Saper.logowanie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Saper"
        mc:Ignorable="d"
        Title="logowanie" Height="450" Width="800">
    <Grid Style="{StaticResource logowanie_grid}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.ColumnSpan="2" Content="LOGOWANIE" Style="{StaticResource naglowek}"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Podaj swój nick: " Style="{StaticResource napis}"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="nick"/>
        <Button Grid.Row="2" Grid.ColumnSpan="2" Height="20" Width="90"/>

    </Grid>
</Window>
